{
    "compilerOptions": {
      "target": "es6",
      "lib": [
          "dom",
          "es2015",
          "es2016",
          "es2017",
          "es2018",
          "es2019",
          "es2020"
      ],
      "allowJs": true,
      "strict": true,
      "moduleResolution": "node",
      "module": "commonjs",
      "sourceMap": true,
      "outDir": "./out",
      "baseUrl": ".",
      "paths": {
          "app/*": ["src/app/*"],
          "tests/*": ["src/tests/*"]
      },
      "experimentalDecorators": true,
      "emitDecoratorMetadata": true,
      "strictPropertyInitialization": false
    },
    "include": ["src"]
  }
